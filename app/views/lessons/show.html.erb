<div class="well">
  <div class="center">
    <h2><%=@lesson.title%></h2>
  </div>
  
      
  <% if @lesson.exercises.count == 0 %> 
  <div class="alert alert-error">
    <h2><strong><center>There isn't any exercise in this lesson</center></strong></h2>
  </div>
	
  <% else %> 
   <div class="accordion" id="accordion2">
      <% @lesson.exercises.each do |e| %>  
            <div class="accordion-group">  
              <div class="accordion-heading">  
                <a class="accordion-toggle" data-toggle="collapse" data-parent="#accordion2" href="#<%= e.id %>">  
                 <h5><%= e.name %></h5>
                 <%if @status.detect {|s| s.association_id == @lesson.associations.find_by_exercise_id(e.id).id}%>
                  <p>fatto</p>
                 <%end%> 
                </a>  
              </div>  
              <div id="<%= e.id %>" class="accordion-body collapse" style="height: 0px; ">  
                <div class="accordion-inner">  
                  <p><%= e.description %></p>
                  <p><%= e.difficulty %></p>
                  <p><%= @lesson.associations.find_by_exercise_id(e.id).repetitions %></p>
                  <%=link_to '<label class="label label-info">Start Exercise</label>'.html_safe,controller: :exercises,action: :show,:association_id => @lesson.associations.find_by_exercise_id(e.id).id %>  
                </div>  
              </div>  
            </div>  
  <% end %><br />
  </div>
  <% end %>
  <%= link_to '<button class="btn btn-default">Back</button>'.html_safe, controller: :users, action: :list %>
</div>
