<div class="page-title"><h2 class="center"><i class="icon-film"></i>&nbsp;<%=@lesson.title%></h2></div>


<div class="center backstage">
  
  <div class = "row-fluid black">
    <div class="goal span6" style="padding: 25px">
      <iframe id="iframe" width="100%" height="100%" src="<%= "http://www.youtube.com/embed/"+@exercise.code %>"></iframe>
    </div>
    <div class="goal span6" style="padding: 25px">
      <h3><i class="icon-play light-red"></i>&nbsp;<%=@exercise.name%></h3>
      <p style="text-align:left">
	<strong><%=@exercise.description%></strong><br /><br />
	Ripetizioni: <strong><%=@association.repetitions%></strong><br />
      </p>
      <p>
	<%= link_to '<button class="btn btn-large btn-danger" style="margin-top: 40px; border: 2px #ebebeb solid"><i class="icon-reply"></i>&nbsp;&nbsp;Indietro</button>'.html_safe, controller: :lessons, action: :show, lesson_id: @association.lesson_id %>
	
	<%= link_to '<button class="btn btn-large btn-success" style="margin-top: 40px; border: 2px #ebebeb solid"><i class="icon-ok"></i>&nbsp;&nbsp;Fine esercizio!</button>'.html_safe,controller: :users, action: :add_status, :association_id => @association.id , :user_id => current_user.id %>
	
      </p>
    </div>
  </div>
</div>
		

