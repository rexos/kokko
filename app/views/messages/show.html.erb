<div class="row-fluid"> 
 <div class="span9">  

  <!-- TITOLO -->
<div class="page-title">
  <h2 class="center">
      <i class="icon-envelope"></i>&nbsp; Messaggi ricevuti
  </h2>
</div>

<div class="row-fluid center">
<p><button class="btn btn-large btn-primary" href="#new-message-modal" data-toggle="modal"><i class="icon-plus"></i>&nbsp;Nuovo Messaggio</button></p>
</div>

  <div class="accordion" id="Ricevuti">
    <% if @messages.count == 0 %>
      <div class="alert alert-danger" style="margin-top: 20px">
        <h3 class="center" >Non Ã¨ presente alcun messaggio!</h3>
      </div>
    <% else %> 
    <div class="row-fluid">
      <div class="accordion" id="Ricevuti">
      <% @messages.each do |m| %>  
       <div class="accordion-group" id="message-<%= m.id %>" >
          <div class="accordion-heading ">  
            <a class="accordion-toggle" data-toggle="collapse" data-parent="#Ricevuti" href="#<%= m.id %>">  
             <h3>
             <%= gravatar_for(User.find(m.from), "avatar") %>&nbsp;&nbsp;
             <%= User.find(m.from).username.capitalize %>
             <% if m.read %>
               <strong><i class="icon-ok-sign"></i></strong> <!-- messaggio gia letto --> 
             <% end %>
             </h3>      
             </a>  
          </div>  
        <div id="<%= m.id %>"  class="accordion-body collapse" >  
          <div class="accordion-inner"> 
            <small>
              Ricevuto il : <%= m.created_at.to_s[0..9] %> alle : <%= m.created_at.to_s[11..15] %>
            </small>
            <h3>
              <%= m.body %>
            </h3>
	      
        <div class="msg-option">
          <p style="color:blue; cursor:pointer" class="answer" data-destination="<%= User.find(m.from).username %>"><i class="icon-share"></i>&nbsp;Rispondi</p>
        </div>

	      <% if !m.read %>
	      <div class="msg-option" id="label-<%= m.id %>"><%= link_to '<p style="color:green"><i class="icon icon-ok-sign"></i> Letto</p>'.html_safe, action: :set_read, :message_id => m.id, :remote => true %>
        </div>
	      <% end %>

        <div class="msg-option">
	      <%= link_to '<p style="color:red"><i class="icon icon-remove"></i> Cancella</p>'.html_safe, { controller: :messages, action: :destroy, :message_id => m.id}, confirm: "Sei sicuro di voler eliminare il messaggio?\npremi OK per eliminarlo", :remote => true %>
        </div>
        <div style="clear:both"></div>    

          </div> <!-- accordion inner -->   
        </div>
       </div>
      <% end %>   
    </div>  
  </div>
  <% end %> <!-- chiudo if/else messagecount=0 -->
  </div>
 </div>

 <div class="span3 center" >
  <div class="row-fluid center">

<div class="row-fluid">
    <div class="center">
    <div class="h-icon">
    <h2>Home</h2>
    <%= link_to ({ controller: :users, action: :home_utente })  do %>
    <i class="icon-home" style="font-size: 140px;color:#2980B9"></i>
    </div>
    <% end %>
    </div>
  </div> 

  <div class="row-fluid">
    <div class="center" style="margin-bottom: 20px">
      <div class="h-icon">
        <h2>Bacheca</h2>
        <%= link_to ({ controller: :users, action: :wall}) do %>
        <%= image_tag ("illustrations/book.png"), :class => "home-icon" %>
        </div>
        <% end %>
      </div>
    </div>

  <div class="row-fluid">
    <div class="center" style="margin-bottom: 20px">
    <div class="h-icon">
    <h2>Amici</h2>
    <%= link_to :controller => :users, :action => :friends do %>
    <%= image_tag ("illustrations/colors.png"), :class => "home-icon" %>
    </div>
    <% end %>
    </div>
  </div>
 </div> <!-- chiude span2 -->
</div> <!--chiudo prima row fluid -->
</div>

<%= render "new_message" %>
