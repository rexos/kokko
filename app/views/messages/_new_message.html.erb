<div id="new-message-modal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header" >
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel" style="color:white">Nuovo Messaggio</h3>
  </div>
  <div class="modal-body center" >
    <br />
    <%= form_for :message, :remote => true, url: {controller: :messages, action: :create} do |f| %>
    <%= f.text_field :reciever, :placeholder => 'Destinatario' %><br />
    <%= f.text_area :body, :placeholder => 'Testo...', :rows => 5%><br />
    
  </div>
  <div class="modal-footer">
    <button class="btn btn-large" data-dismiss="modal" aria-hidden="true"><i class="icon-reply"></i>&nbsp;&nbsp;Indietro</button>
    <button type="submit" class="btn btn-large btn-success"><i class="icon icon-envelope"></i>&nbsp;&nbsp;Send</button>
    <% end %>
  </div>
</div>
