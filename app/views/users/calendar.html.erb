<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN""http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html>
<head>

  <%= csrf_meta_tag %>
	<link rel='stylesheet' type='text/css' href='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/themes/start/jquery-ui.css' />
	<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jquery/1.3.2/jquery.min.js'></script>
	<script type='text/javascript' src='http://ajax.googleapis.com/ajax/libs/jqueryui/1.7.2/jquery-ui.min.js'></script>
	<%= stylesheet_link_tag "weekcalendar" %>
	<%= stylesheet_link_tag "application" %>
	<%= stylesheet_link_tag "demo" %>
	<%= stylesheet_link_tag "reset" %>
	<%= javascript_include_tag "jquery.weekcalendar" %>
	<%= javascript_include_tag "demo" %>
	
	



</head>
<body> 

<div class="row-fluid">
	<div class="page-title">
  		<h2 class="center">
      		<i class="icon-calendar"></i>&nbsp;CALENDARIO
  		</h2>  
	</div>
</div>

	<div class="row-fluid">
	<div id='calendar'></div>
	<div id="event_edit_container">
		<form>
			<input type="hidden" />
			<ul>
				<li>
					<span>Data: </span><span class="date_holder"></span> 
				</li>
				<li>
					<label for="start">Inizio: </label><select name="start"><option value="">Seleziona</option></select>
				</li>
				<li>
					<label for="end">Fine: </label><select name="end"><option value="">Seleziona</option></select>
				</li>
				<li>
					<label for="title">Titolo: </label><input type="text" name="title" />
				</li>
				<li>
					<label for="body">Descrizione: </label><textarea name="body"></textarea>
				</li>
			</ul>
		</form>
	</div>
</div>
</body>
</html>
