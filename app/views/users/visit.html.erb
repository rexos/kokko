<div class="page-title">
    <h2 class="center">
        <i class="icon-list"></i>&nbsp;Bacheca di <%= @visited_user.username.capitalize %>
    </h2>
  </div>

<div class="row-fluid center ">
<%= gravatar_for( @visited_user, "avatar") %>
</div>

<% if !Relationship.where( :follower => current_user.id, :followed => @visited_user.id ).first %>
<%= link_to '<button id="follow" class="btn btn-warning"><i class="icon icon-group"></i>&nbsp;&nbsp;Segui</button>'.html_safe, :remote => true, :action => :follow, :followed => @visited_user.id %>
<% end %>

<div class="row-fluid">
  
   
   
    <% @visited_user_feedbacks.each do |f| %>
    

    <div class="well row-visited" id=<%= f.id %> >
      
      
      <% if f.program_id %>
       <h4>
       <%= image_tag ("illustrations/share.png"), :class => "wall-image" %>
	     <small>
	     <%= f.user.username.capitalize %> a proposito di <%= Program.find(f.program_id).title %>
	     commentato con rating al programma :
	     </small>
	     <%= f.rating %>
      </h2>
    <% end %>
      <h4>
      <%= image_tag ("illustrations/share.png"), :class => "wall-image" %>
      &nbsp;
      <i class="icon-quote-left"></i>&nbsp;
      <%= f.body %>
      &nbsp;<i class="icon-quote-right"></i>
      </h4>
      <h4>
	<small>
	  Posted on : <%= f.created_at.to_s[0..9] %> at : <%= f.created_at.to_s[11..15] %>&nbsp;&nbsp;
	</small>
      </h4>
    </div>
    <% end %>


</div>
