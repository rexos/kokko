<!--<div class="o" style="background-color: #b94a48; border: 2px solid #a73d3b">-->
  <div class="center">
    <h2 class="black"><i class="icon-list"></i>&nbsp;Programmi Allenamento</h2>
  </div>

  <% if @programs.count == 0 %>
  <div class="alert alert-error">
    <h2><strong><center>Non c'è alcun allenamento!</center></strong></h2>
  </div>
  <% else %>
  <div class="accordion" id="accordion2">
    <% @programs.each do |p| %>
      <div class="accordion-group">  
        <div class="accordion-heading">  
          <a class="accordion-toggle" style="background-color: #b94a48; " data-toggle="collapse" data-parent="#accordion2" href="#<%= p.id %>">  
            <h4>
		   			  <% total = 0 %>
		   			  <% p.lessons.each do |lesson| %>
		   			  <% total += lesson.exercises.count %>
		   			  <% end %>
		   			  <% ex_done=0 %>
		  			  <i class="icon-flag white"></i>&nbsp;<%= p.title %>
		   			  <% current_user.statuses.each do |s| %>
		   			  <% association = Association.find(s.association_id) %>
		   			  <% prog = Program.find(Lesson.find(association.lesson_id).program.id) %>
		   			  <% if prog.id == p.id %>
		   			  <% ex_done +=1 %>
		   			  <% end %>
		   		    <% end %>
		   			  - Progresso : <%= progress = ((ex_done.to_f/total.to_f)*100).to_i %>%
		   		    <br />
              <div class="progress progress-striped active" style="margin: 20px; border: 2px #ebebeb solid">
		     		   	<div class="bar bar-danger" style="width: <%= progress %>%;">
                </div>
		   			  </div>
		 		    </h4>      
          </a>  
        </div>  

          <div id="<%= p.id %>" class="accordion-body collapse" style="height: 0px; ">  
            <div class="accordion-inner white" style="background-color: #a73d3b">  
              <p><%= p.description %></p>
              <div class="center">
            	<% if p.lessons.count == 0 %>
             		<div class="alert alert-error">
              			<h4><strong><center>Non c'è nessuna lezione per questo programma!</center></strong></h2>
            		</div>
            	<% else %> 
              
	           		<h4>Lessons of <%= p.title %> :</h4>
	           		<ul type="none">
	             	<% p.lessons.each do |l| %>
	             	  <li>
	             	   <%=link_to l.title, controller: :lessons, action: :show, :lesson_id => l.id %>
	             	  </li>
               		<% end %>
	           		  </ul>
              		
			<% state = String.new %>
			<% if progress>0 %>
			<%=link_to '<button class="btn btn-large btn-danger" style="border: 2px #ebebeb solid"><b>Continua Allenamento</b></button>'.html_safe,controller: :programs,action: :start,:prog_id => p.id %>
			<% else %>
			<%=link_to '<button class="btn btn-large btn-danger" style="border: 2px #ebebeb solid"><b>Inizia Allenamento</b></button>'.html_safe,controller: :programs,action: :start,:prog_id => p.id %>
			<% end %>
              	</div>	
             		<% end %>    
              	</div>  
                </div>  
                </div>
          <% end %>

  <% end %>
 
</div>
