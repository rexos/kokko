<div class="page-title">
  <h2 class="center">
      <i class="icon-group"></i>&nbsp;I miei amici
  </h2>
</div>

<div class="row-fluid center">
<%= form_for :research, :remote => true, url: {controller: :users, action: :search} do |f| %>
<%= f.text_field :text, placeholder: "Cerca qualcuno" %>&nbsp;<button class="btn btn-info"><i class="icon icon-search"></i></button>
<!--<button class="btn btn-default" type="submit"><i class="icon icon-search"></i></button>-->
<% end  %>
</div>

<div class="row-fluid">
<div class="span9">
<div class="row-following">
  <h3>Chi seguo:</h3>
  <% @current_user_friends.each do |friend|  %>
  <div id=<%= friend.id %> class="row-fluid friend-row" style="width:30%">
    <h4><%= gravatar_for( friend,"avatar" ) %> &nbsp;&nbsp;
    <%= link_to action: :visit, :visited_user_id => friend.id do %>
    <button class="btn btn-success"><i class="icon-eye-open"></i>&nbsp;Visita</button>
    <% end %>
    <%= link_to action: :remove_friend, :removed_friend_id => friend.id, :remote => true do %>
    <button class="btn btn-danger"><i class="icon-remove"></i>&nbsp;Rimuovi</button>
    <% end %>
    
    <strong><%= friend.username.capitalize %></strong>
    <h4>
  </div>
  <% end %>
</div>
</div>
<div class="span3">
  <div class="row-fluid center">

    <div class="center" style="margin-bottom: 20px">
      <div class="h-icon">
        <h2>Bacheca</h2>
        <%= link_to ({ controller: :users, action: :wall}) do %>
        <%= image_tag ("illustrations/book.png"), :class => "home-icon" %>
        </div>
        <% end %>
      </div>
    </div>

  <div class="row-fluid">
  <div class="center" style="margin-bottom: 20px">
    <div class="h-icon">
    <h2>Messaggi</h2>
    <%= link_to ({ controller: :messages, action: :show}) do %>
    <%= image_tag ("illustrations/mail.png"), :class => "home-icon" %>
    </div>
    <% end %>
    </div>
  </div>
</div>
</div>
