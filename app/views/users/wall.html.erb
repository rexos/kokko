<div class="page-title">
  <h2 class="center">
      <i class="icon-e"></i>&nbsp;Bacheca di <%= current_user.username.capitalize %>
  </h2>
  
</div>

<div class="well center">
  <%= form_for :feedback, url: {controller: :feedbacks, action: :create} do |f| %>
  <%= f.text_area :body, :placeholder => "Come ti senti oggi?", rows: 4 %><br />
  <button type="submit" class="btn btn-info btn-default"><i class="icon icon-ok"></i>&nbsp;&nbsp;Pubblica!</button>
  <% end %>
</div>

<div class="well">
  
    <% @feedbacks.each do |f| %>
    <div class="row-fluid" id= <%= f.id %> >
      <% if f.program_id %>
    <h4>
	  <%= f.user.username.capitalize %> a proposito di <%= Program.find(f.program_id).title %>
	  commentato con rating al programma :
	  <%= f.rating %>
    <% end %>
    <%= f.body %>
    </h4>
    <br />
    <small>
	  Scritto il : <%= f.created_at.to_s[0..9] %> alle : <%= f.created_at.to_s[11..15] %>&nbsp;&nbsp;
	  <%= link_to '<i class="icon icon-remove"></i>'.html_safe, controller: :feedbacks, action: :destroy, :feedback_id => f.id, :remote => true %>
	  </small>
    </div>
    
    <% end %>
  
</div>
