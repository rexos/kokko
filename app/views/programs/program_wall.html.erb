<div class="page-title">
    <h2 class="center">
        <i class="icon-pushpin"></i>&nbsp;Bacheca <%= @program.title.capitalize %>
    </h2>
  </div>

<div class="center">

  <% if @program.feedbacks.count == 0 %>

    <div class="alert alert-error center">
      <h2>Al momento non vi sono commenti al programma,<br />completa l'allenamento ed inserisci il tuo commento! </h2>
    </div>
  <% else %>
    <% @program.feedbacks.each do |feed| %>
      <div class="message-row">
        <%= gravatar_for(User.find(feed.user.id), "avatar") %>
        <div style="clear:left"></div>
        <h4 class="center"><%= feed.user.username.capitalize %></h4>
        <p><strong>Commento:</strong> <%= feed.body %></p>
        <p><strong>Rating:</strong> <%= feed.rating %></p>
    </div>
    <% end %>
  <% end %>
</div>