<div class="container center">
  <div class="row-fluid menu-el">
    <% progress = get_progress_of_program(@program.id) %>
    
    <% if progress == 0%>
    <div class="span6 center span-sx black">
      <%= link_to ({ controller: :programs, action: :start, :prog_id => @program.id }) do %>
      <h2 class="menu-title"><!-- <i class="icon-list red"></i> -->INIZIA</h2>
      <%= image_tag ("illustrations/compass.png"), :class => "menu-icon" %>  
      <% end %>
    </div>
    
    <% elsif progress>0 && progress<100%>
      <div class="span6 center span-sx">
	<%= link_to ({ controller: :programs, action: :resume, :prog_id => @program.id }) do %>
	<h2 class="menu-title"><!-- <i class="icon-list red"></i> -->CONTINUA</h2>
	<%= image_tag ("illustrations/compass.png"), :class => "menu-icon" %>
	<% end %>
      </div>
      
      <% else %>
      <div class="span6 center span-sx">
	<%= link_to ({ controller: :programs, action: :start, :prog_id => @program.id }) do %>
	<h2 class="menu-title"><!-- <i class="icon-list red"></i> -->RICOMINCIA</h2>
	<%= image_tag ("illustrations/compass.png"), :class => "menu-icon" %>  
	<% end %>
      </div>
      <% end %>
      
      <div class="span6 center span-dx" >
	<%= link_to ({action: :progresses, :prog_id => @program.id}) do %>
	<h2 class="menu-title"><!-- <i class="icon-bar-chart black"></i> -->PROGRESSI</h2>
	<%= image_tag ("illustrations/clipboard.png"), :class => "menu-icon" %>
	<% end %>
      </div>	      
  </div>
 
      	
  <div class="row-fluid menu-el ">
    <div class="span6 center span-odd-sx">
      <%= link_to controller: :users, action: :calendar do %>
	<h2 class="menu-title"><!-- <i class="icon-calendar black"></i>&nbsp; -->CALENDARIO</h2>
	<%= image_tag ("illustrations/calendar.png"), :class => "menu-icon" %>
	<% end %>
    </div>
    
    
    <div class="span6 center span-odd-dx">
      <%= link_to action: :program_wall, :program_id => @program.id do %>
      <h2 class="menu-title"><!-- <i class="icon-comments red"></i>&nbsp; -->BACHECA PROGRAMMA</h2>
      <%= image_tag ("illustrations/book.png"), :class => "menu-icon" %>
      <% end %>
    </div>
  </div>
	    
  <div class="row-fluid menu-el">
    <div class="span6 center span-sx">
      <%= link_to action: :waiting_room, :program_id => @program.id do %>
      <h2 class="menu-title"><!-- <i class="icon-group black"></i>&nbsp; -->SALA D'ATTESA</h2>
      <%= image_tag ("illustrations/time.png"), :class => "menu-icon" %>
      <% end %>         
    </div>
    
    <div class="span6 center span-dx">
      <%= link_to ({ controller: :users, action: :home_utente })  do %>   
      <h2 class="menu-title"><!-- <i class="icon-envelope red"></i>&nbsp; -->HOME</h2>
      <i class="icon-home" style="font-size: 150px; color:#2980B9"></i>
      <% end %> 
    </div>
  </div>
  
  <div class="row-fluid">
    <div class="span12 center">
         <h2>INIZIA TRA</h2>
         <p>
         <div class="time">
          <%= 3600 - (@time.to_s[14...16].to_i*60)+(@time.to_s[17...19].to_i) %>
         </div>
       </p>    
    </div>
  </div>	
  
</div> <!-- container center-->	    
	    
<% if @done_program %>
<%= render 'feedback' %>
<% end %>
