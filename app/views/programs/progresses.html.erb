  <h2 class="center page-title">
    <i class="icon-bar-chart"></i>
    Progressi di: <%= @program.title %>
  </h2>

  <div class="container center">
  
<div class="row-fluid center">
  <div style="margin-top:40px;float:left">
        <% @program.lessons.each do |l|%>
        
       <% if get_progress_of_lesson(l.id) != 0 %>
          <div class="medal" style="float:left">
            <p><%= l.title %></p>
            <h2 style="margin:0px;position:relative;top:180px"><%= get_progress_of_lesson(l.id) %>%</h2>
            <%= image_tag('medal/Medal.jpeg',:size => "250x100") %>
              <div class="meter nostripes" style="width:75%; border: 2px solid #BDC3C7;margin:auto">
                <span  style="width:<%= get_progress_of_lesson(l.id) %>%"></span>
              </div>
          </div>
          <% else %>
          <div class="medal" style="float:left">
            <p><%= l.title %></p>
            <h2 style="margin:0px;position:relative;top:180px"><%= get_progress_of_lesson(l.id) %>%</h2>
            <%= image_tag('medal/MedalNone.png',:size => "250x100") %>
          </div>
        <% end %>
        <% end %>
      </div>
      


      
       <div class="medal cup center" style="margin-bottom:20px;float:left">
        <% if get_progress_of_program(@program.id) != 0 %>
          <h4 style="margin:0px;position:relative;top:100px">
          <%= @program.title.split(" -").first %></h4>
          <h2 style="margin:0px;position:relative;top:120px"><%= get_progress_of_program(@program.id) %>%</h2>
          <%= image_tag('medal/cup3.png',:size => "300x100") %>
        <% else %>
          <h4 style="margin:0px;position:relative;top:100px;color:#fff">
          <%= @program.title.split(" -").first %></h4>
          <h2 style="margin:0px;position:relative;top:120px;color:#fff"><%= get_progress_of_program(@program.id) %>%</h2>
          <%= image_tag('medal/cup3none.png',:size => "300x100") %>
        <% end %>
      </div>
   
  <div style="float:clear"></div>
  </div>
  </div>


