<!-- Modal -->
<div id="myModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button>
    <h3 id="myModalLabel">Aggiungi un nuovo programma</h3>
  </div>
  <div class="modal-body">
    <%= form_for :new_program, url: {controller: :programs, action: :create} do |f| %>
    <%= f.text_field :title, placeholder: "Ttitolo" %><br />
    <%= f.text_area :description, placeholder: "Descrizione", cols:30, rows:5 %>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Chiudi</button>
    <button type="submit" class="btn btn-primary">Salva modifiche</button>
    <% end %>
  </div>
</div>
