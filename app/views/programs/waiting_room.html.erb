<div class="page-title">
    <h2 class="center">
        <i class="icon-group"></i>&nbsp;Sala d'attesa
    </h2>
  </div>

<div class="row-fluid">
	<div class="span12">
			<div style="margin-left: 15px"><h3>Utenti iscritti al programma <strong><%= @program.title.capitalize %></strong></h3></div>
		<% if @attending.count == 0 %>
		<div class="alert alert-danger" style="margin-top: 20px">
        <h3 class="center" >Non Ã¨ iscritto nessuno al momento!</h3>
      	</div>
      	<% end %>
		<% @attending.each do |u| %>
		<div class="user-box">
		  <%= gravatar_for(User.find(u.id), "avatar") %>
		  <div style="clear:left"></div>
		  <h4 class="center"><%= u.username.capitalize %>&nbsp;
		    <% if u.online %>
		    <icon class="icon-circle" style="color:#2ecc71"></i>
                    <% else %>
		    <icon class="icon-circle"></i>
                    <% end %>
		  </h4>
		</div>
		<% end %>
	</div>
</div>
<div class="row-fluid">
  <div class="span12 center">
    <h2>La <%= @event.title %> inizia tra : <%= @days.to_s[0] %> giorni </h2>
    <p>
      <div class="time">
      </div>
    </p>    
  </div>
</div>
 <div class="center" style="margin-top:25px;"><%= link_to '<button class="btn btn-large btn-danger"><i class="icon-reply"></i>&nbsp;&nbsp;Indietro</button>'.html_safe, controller: :programs, action: :show, :prog_id => @program.id %></div>
